@page "/simple-test"
@using Blackjack.Shared

<PageTitle>Простой тест</PageTitle>

<h1>🎮 Blackjack - Простой тест</h1>

<div style="background: green; padding: 20px; min-height: 100vh;">

    <!-- Дилер -->
    <div style="margin-bottom: 50px; text-align: center;">
        <h2 style="color: white;">Дилер (Очки: ?)</h2>
        <div style="display: flex; justify-content: center; gap: 10px;">
            <div style="width: 100px; height: 150px; background: white; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 40px;">
                K♣
            </div>
            <div style="width: 100px; height: 150px; background: blue; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 40px; color: white;">
                🂠
            </div>
        </div>
    </div>

    <!-- Колода -->
    <div style="text-align: center; margin: 30px 0;">
        <div style="display: inline-block; text-align: center;">
            <div style="width: 100px; height: 150px; background: gray; border-radius: 8px; margin: 0 auto; display: flex; align-items: center; justify-content: center; font-size: 40px;">
                🂠
            </div>
            <div style="color: white; margin-top: 10px;">48 карт</div>
        </div>
    </div>

    <!-- Кнопки -->
    <div style="text-align: center; margin: 30px 0;">
        <button style="padding: 15px 30px; font-size: 18px; margin: 5px; background: #28a745; color: white; border: none; border-radius: 5px;">
            Взять карту
        </button>
        <button style="padding: 15px 30px; font-size: 18px; margin: 5px; background: #ffc107; color: black; border: none; border-radius: 5px;">
            Хватит
        </button>
        <button style="padding: 15px 30px; font-size: 18px; margin: 5px; background: #007bff; color: white; border: none; border-radius: 5px;">
            Новая игра
        </button>
    </div>

    <!-- Игрок -->
    <div style="margin-top: 50px; text-align: center;">
        <h2 style="color: white;">Саня (Очки: 14)</h2>
        <div style="display: flex; justify-content: center; gap: 10px;">
            <div style="width: 100px; height: 150px; background: white; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 40px; color: red;">
                10♥
            </div>
            <div style="width: 100px; height: 150px; background: white; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 40px;">
                4♦
            </div>
        </div>
    </div>

    <!-- Статус -->
    <div style="text-align: center; margin-top: 30px; color: yellow; font-size: 24px;">
        Ваш ход...
    </div>

</div>