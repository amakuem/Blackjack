

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">♠️♥️♣️♦️ Blackjack</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <div class="d-flex align-items-center">
                <span class="oi oi-home" aria-hidden="true"></span>
                <a class="nav-link" href="" @onclick.prevent="GoToLobby">
                    <span class="nav-link-text">Главная лобби</span>
                </a>
            </div>
        </div>
        <div class="nav-item px-3">
            <div class="text-muted small mt-3 mb-1">
                Игроки онлайн
            </div>
            <div class="player-count">
                <span class="online-dot"></span>
                <span>@(PlayerCount) игроков</span>
            </div>
        </div>
    </nav>
</div>

@code {
    [Parameter] public int PlayerCount { get; set; }
    [Inject] private NavigationManager Navigation { get; set; }

    private bool collapseNavMenu = true;
    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void GoToLobby()
    {
        Navigation.NavigateTo("/");
        collapseNavMenu = true;
    }
}
