
@inherits LayoutComponentBase
@implements IDisposable

<div class="page">
    @* <div class="sidebar"> *@
    @*     <NavMenu /> *@
    @* </div> *@

    <main>
        <div class="top-row px-4">
            @if (!IsLobby)
            {
                <a href="" @onclick="ReturnToLobby" class="btn btn-outline-light">← Вернуться в лобби</a>
            }
            <span class="text-light ms-3">Blackjack Dream Team</span>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    [Inject] private NavigationManager Navigation { get; set; }

    private bool IsLobby => Navigation.Uri.EndsWith("/") ||
                           Navigation.Uri.Contains("/lobby") ||
                           !Navigation.Uri.Contains("/game");

    private void ReturnToLobby()
    {
        Navigation.NavigateTo("/");
    }

    public void Dispose()
    {
        // Cleanup if needed
    }
}